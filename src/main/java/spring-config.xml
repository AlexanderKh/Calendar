<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
       <bean id="config" class="alex.reader.ConfigReader" />
       <bean id="console" class="alex.reader.ConsoleReader" />
       <bean id="today" class="alex.reader.TodayReader" />

       <bean id="consoleOut" class="alex.renderer.ConsoleCalendarRenderer" />
       <bean id="htmlOut" class="alex.renderer.HTMLCalendarRenderer"/>

       <bean id="calendarApp" class="alex.CalendarApp">
              <property name="reader" ref="today" />
              <property name="renderer" ref="consoleOut"/>
       </bean>
</beans>